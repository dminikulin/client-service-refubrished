<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Spring project nobody cares about - Clients</title>
    {{{bootstrapHead}}}
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="form">
    <form method="post" action="add_client">
        <input type="text" placeholder="surname" name="surname" value="S">
        <input type="text" placeholder="name" name="name" value="N">
        <input type="text" placeholder="patronymic" name="patronymic" value="P">
        <input type="text" placeholder="email" name="email" value="E">
        <input type="text" placeholder="dd.mm.yyyy" name="birthDate" value="12.03.1999">
        <select name="gender">
            <option value="NONE">NONE</option>
            <option value="MALE">MALE</option>
            <option value="FEMALE">FEMALE</option>
        </select>
        <input type="submit" value="ADD">
    </form>
</div>
<div class="table">
{{#clients}}
        <table>
        <tr>
            <th>Id</th>
            <th>Surname</th>
            <th>Name</th>
            <th>Patronymic</th>
            <th>Email</th>
            <th>Birth date</th>
            <th>Gender</th>
        </tr>
        {{#clients}}
            <tr>
                <td>{{id}}</td>
                <td>{{surname}}</td>
                <td>{{name}}</td>
                <td>{{patronymic}}</td>
                <td>{{email}}</td>
                <td>{{birthDate}}</td>
                <td>{{gender}}</td>
            </tr>
        {{/clients}}
</table>
{{/clients}}
{{^clients}}
    <div class="alert">No clients</div>
{{/clients}}
    <a href="/phones">Phones</a>
    <br>
    <a href="/accounts">Accounts</a>
</div>
</body>
</html>